<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_list_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sopt_android_20th.week8_pratice.RecyclerViewActivity">
    <EditText
        android:background="@drawable/board_background"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:id="@+id/comment_writer_edit"
        android:hint="댓글: 작성자"/>

    <EditText
        android:background="@drawable/board_background"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:id="@+id/comment_content_edit"
        android:hint="댓글: 내용"/>

    <Button
        android:id="@+id/commentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="댓글 등록"
        android:textColor="#000000" />

    </LinearLayout>
